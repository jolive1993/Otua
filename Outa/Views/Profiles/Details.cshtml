@model Outa.Models.Profile

@{
    ViewBag.Title = "Details";
}
<head>
    <script src="http://maps.google.com/maps/api/js?sensor=false"></script>
</head>
    <div class="row">
        <div class="col-md-6"><img src="@Html.DisplayFor(model => model.Img)" /></div>
        <div class="col-md-6">
            <h2>@Html.DisplayFor(model => model.UserName)</h2>
            <h2 id="location">what</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h1>@Html.DisplayFor(model => model.Rating)</h1>
        </div>
    </div>
<script>
    function getAddress() {
        var geocoder = new google.maps.Geocoder();
        var lat = @Model.Lat;
        var long = @Model.Long;
        var latlng = {lat: parseFloat(lat), lng: parseFloat(long)};
        geocoder.geocode({ 'location': latlng }, function (results, status) {

            if (status == google.maps.GeocoderStatus.OK) {
                console.log(results[0].formatted_address);
                var address = (results[0].formatted_address).split(",");
                console.log(address);
                $('#location').text(address[1] + "," + address[2]);
            }
        });
    }
    $( document ).ready(function() {
        getAddress();
    });
</script>