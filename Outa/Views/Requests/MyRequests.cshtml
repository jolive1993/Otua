@model IEnumerable<Outa.Models.Request>

@{
    ViewBag.Title = "MyRequests";
}

<h2>MyRequests</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorUn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tags)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            Offers
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AuthorUn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tags)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @if (item.Status == 0)
            {
                @Html.Raw("Open")
            }
            else if (item.Status == 1)
            {
                @Html.Raw("Accepted Offer")
            }
        </td>
        <td id="countoffers">
            @{
                using (var context = new Outa.Models.ApplicationDbContext())
                {
                    var q = String.Format("SELECT * FROM dbo.Offer WHERE o_Parent = {0}", item.Id);
                    var count = context.Offers.SqlQuery(q).ToList();
                    @count.Count;
                }
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
            @Html.ActionLink("View Offers", "IndexByParent", "Offers", new { id = item.Id }, null)
        </td>
    </tr>
}

</table>
